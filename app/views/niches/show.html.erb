<%= render "shared/header" %>
<div>
  <%= @niche.title %>
</div>
<div class="search">
検索エリア
</div>
<div class="tab">
タブエリア
</div>
<div class="timeline">
  <div>
    タイムライン表示エリア
  </div>
  <div>
    <ul>
      <% if @posts.present? %>
        <% @posts.each do |post| %>
          <li>
            <%= link_to niche_post_path(@niche, post), method: :get do %>
            <div>
              <h3>
                <%= post.title %>
              </h3>
              <div>
                <%= post.content %>
              </div>
            </div>
            <% end %>
          </li>
        <% end %>
      <% end %>
    </ul>
  </div>
</div>
<%= link_to(new_niche_post_path(@niche), class: 'purchase-btn') do %>
  <span class='purchase-btn-text'>投稿する</span>
  <%= image_tag 'icon_camera.png' , size: '185x50' ,class: "purchase-btn-icon" %>
<% end %>
<%= render "shared/footer" %>