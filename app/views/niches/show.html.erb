<%= render "shared/header2" %>

<div class="tab">
新着　<%= link_to 'ガントチャート', niche_gantts_path(@niche) %>　<%= link_to 'グラフ', niche_graphs_path(@niche) %>
</div>
<div class="timeline">
  <div>
    タイムライン表示エリア
  </div>
  <div>
    <ul class="uii">
      <% if @posts.present? %>
        <% @posts.each do |post| %>
          <li class="lii">
            <%= link_to niche_post_path(@niche, post), method: :get do %>
            <div>
              <div>
                <% if post.images.attached? %>
                  <%= image_tag post.images.first %>
                <% end %>
              </div>
              <h3>
                <%= post.title %>
              </h3>
              <div>
                <%= post.content %>
              </div>
            </div>
            <% end %>
          </li>
        <% end %>
      <% end %>
    </ul>
  </div>
  <div>
    <%= link_to '編集', edit_niche_path(@niche) %>
  </div>

</div>
<%= link_to(new_niche_post_path(@niche), class: 'purchase-btn') do %>
  <span class='purchase-btn-text'>投稿する</span>
  <%= image_tag 'icon_camera.png' , size: '185x50' ,class: "purchase-btn-icon" %>
<% end %>
<%= render "shared/footer" %>